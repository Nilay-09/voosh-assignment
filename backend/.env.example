# =================================
# NEWS CHATBOT API - PRODUCTION CONFIG
# =================================

# Server Configuration
SERVER_PORT=3003
NODE_ENV=production
API_VERSION=v1

# Database Configuration - Redis Cache
REDIS_CONNECTION_URL=rediss://default:your-redis-password@your-redis-host:6379
REDIS_CONNECTION_POOL_SIZE=10
REDIS_SESSION_TTL=86400
REDIS_CACHE_TTL=1800

# AI Services Configuration
JINA_EMBEDDINGS_API_KEY=your-jina-api-key-here
JINA_EMBEDDINGS_MODEL=jina-embeddings-v2-base-en
JINA_API_TIMEOUT=30000

GOOGLE_GEMINI_API_KEY=your-gemini-api-key-here
GOOGLE_GEMINI_MODEL=gemini-1.5-flash
GEMINI_API_TIMEOUT=30000

# Vector Database Configuration - Qdrant
QDRANT_CLUSTER_URL=https://your-cluster-url.us-east4-0.gcp.cloud.qdrant.io:6333
QDRANT_API_KEY=your-qdrant-api-key-here
QDRANT_COLLECTION_NAME=news_articles_prod
QDRANT_VECTOR_DIMENSION=768

# Security & CORS Configuration
FRONTEND_APPLICATION_URL=http://localhost:5173
CORS_ALLOWED_ORIGINS=http://localhost:5173,https://yourdomain.com
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=logs/application.log
ERROR_LOG_FILE_PATH=logs/error.log

# News Ingestion Configuration
NEWS_INGESTION_BATCH_SIZE=50
NEWS_CONTENT_MAX_LENGTH=5000
NEWS_SOURCES_REFRESH_INTERVAL=3600000
